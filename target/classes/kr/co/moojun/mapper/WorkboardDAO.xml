        FROM
          ( 
            SELECT 
                   A.*
                 , ROWNUM R 
              FROM
                (
                  SELECT 
                         * 
                    FROM WORKBOARD
                    WHERE id = #{id}
                   ORDER BY num DESC
                ) A
         )
      WHERE R >= #{start} 
        AND R &lt;= #{end}
        
   </select>
   
    <!-- 내 일자리 등록 게시글의 수 -->
   <select id="getMyWorkAddListCount" resultType="Integer">
      SELECT 
             COUNT(*) 
        FROM WORKBOARD
        WHERE id = #{id}
   </select>
   
